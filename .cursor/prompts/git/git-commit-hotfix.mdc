COMMIT_RESULT=$?

if [ $COMMIT_RESULT -eq 0 ]; then
    COMMIT_HASH=$(git rev-parse HEAD)
    echo "âœ… Commit successful: $COMMIT_HASH"
    
    # Update documentation with actual commit hash
    sed -i "s/\[Will be updated after commit\]/$COMMIT_HASH/g" "$HOTFIX_DOC"
    
