  enableAnimations = false,
  ...props 
}: UIComponentProps & { enableAnimations?: boolean }) => {
  if (enableAnimations) {
    return (
      <Suspense fallback={<OptimizedUIComponent {...props} />}>
        <LazyAnimatedComponent {...props} />
      </Suspense>
    );
  }
  
  return <OptimizedUIComponent {...props} />;
};
