<article
  role={interactive ? 'button' : 'article'}
  tabIndex={interactive ? 0 : undefined}
  aria-label={ariaLabel}
  aria-describedby={`${cardId}-description`}
  onKeyDown={(e) => {
    if (interactive && (e.key === 'Enter' || e.key === ' ')) {
      e.preventDefault();
      onClick?.(e as any);
    }
  }}
  className={cn(
    'card-base',
