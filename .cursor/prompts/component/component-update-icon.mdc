    return {
      content,
      viewBox: this.extractViewBox(content),
      paths: this.extractPaths(content),
      metadata: this.extractMetadata(content)
    }
  }

  getPerformanceMetrics(cacheKey: string) {
    return this.performanceMetrics.get(cacheKey)
  }
}
